<!--                android:background="@drawable/rounded_tab"-->
<!--                android:layout_marginStart="16dp"-->
<!--                android:text="Search"/>-->
<!--        </LinearLayout>-->


        <!-- User Search Results -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/guestList"
            android:name="edu.sjsu.sase.android.roots.event.EventCreationFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/page_padding"
            android:nestedScrollingEnabled="false"
            app:layout_constraintStart_toStartOf="@+id/tilSearchUsers"
            app:layout_constraintTop_toBottomOf="@id/tilSearchUsers" />

        <!-- Action Buttons -->
        <LinearLayout
            android:id="@+id/llActionButtons"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/guestList"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <Button
                android:id="@+id/btnSave"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:minHeight="0dp"
                android:text="Save"
                android:textSize="@dimen/regular_text"
                android:textColor="@color/black"
                android:layout_marginEnd="8dp"
                android:background="@drawable/button_selector"
                app:backgroundTint="@null"/>

            <Button
                android:id="@+id/btnDiscard"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:minHeight="0dp"
                android:layout_weight="1"
                android:text="Discard"
                android:textSize="@dimen/regular_text"
                android:textColor="@color/black"
                android:layout_marginStart="8dp"
                android:background="@drawable/button_selector"
                app:backgroundTint="@null" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>



